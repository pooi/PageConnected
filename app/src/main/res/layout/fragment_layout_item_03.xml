<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="@dimen/paper_width"
        android:layout_height="@dimen/paper_height"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/img0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/half_transparent"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Content"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray2"
                    android:padding="5dp"
                    />


                <View
                    android:id="@+id/line0"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/gray"
                    android:layout_below="@id/tv_content"
                    android:layout_above="@+id/tv_reference"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_reference"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Reference"
                    android:textSize="12sp"
                    android:textColor="@color/light_gray"
                    android:padding="5dp"
                    />



            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_layout_pos"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="layout"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cv"
        />

</RelativeLayout>
