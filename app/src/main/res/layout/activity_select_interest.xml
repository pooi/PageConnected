<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="ga.pageconnected.pageconnected.profile.SelectInterestActivity">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/dark_gray"
            android:text="관심분야 선택"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="3개 이상 선택해주세요."
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:background="@color/light_gray"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            />

        <LinearLayout
            android:id="@+id/li_search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/notice"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="검색"
                android:textSize="12sp"
                android:textColor="@color/profile_title"
                android:gravity="right"
                android:paddingRight="5dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="검색어를 입력해주세요."
                android:textSize="12sp"
                android:textColor="@color/profile_content"
                app:met_singleLineEllipsis="true"
                app:met_primaryColor="@color/profile_content" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/li_search_field"
            android:layout_above="@+id/completeBtn"
            >
            <LinearLayout
                android:id="@+id/btn_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/completeBtn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="완료"
            android:textColor="@color/white"
            />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="LineSpinFadeLoaderIndicator"
            app:indicatorColor="@color/colorPrimary"
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</FrameLayout>
