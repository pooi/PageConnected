<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparency"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

                <RelativeLayout
                    android:id="@+id/rl_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_toLeftOf="@+id/li_btn"
                    android:layout_alignParentTop="true"
                    >

                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/profileImg"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/dark_gray"
                            />

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/gray"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <!-- Profile -->

            <ImageView
                android:id="@+id/img_default"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/pastel_orange"
                android:layout_below="@+id/rl_profile"
                android:scaleType="centerCrop"
                />

            <!-- Default Image -->

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/img_default"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:layout_below="@+id/tv_title"
                android:layout_above="@+id/line1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/light_gray2"
                android:layout_above="@+id/li_addition_field"
                />


            <LinearLayout
                android:id="@+id/li_addition_field"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_account_grey600_18dp"
                    />

                <TextView
                    android:id="@+id/tv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="heart"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_marginRight="5dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_account_grey600_18dp"
                    />

                <TextView
                    android:id="@+id/tv_hit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="hit"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
