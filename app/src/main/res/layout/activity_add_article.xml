<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ga.pageconnected.pageconnected.activity.add.AddArticleActivity"
    android:background="@color/background_color"
    >

    <RelativeLayout
        android:id="@+id/rl_input_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/background_color"
        >

        <TextView
            android:id="@+id/tv_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Layout"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_layout"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/profile_content"
                    android:hint="@string/please_enter_title"
                    app:met_primaryColor="@color/profile_content"
                    app:met_minCharacters="1"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="@string/title"
                    android:layout_margin="10dp"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/profile_content"
                    android:hint="@string/please_enter_content"
                    app:met_primaryColor="@color/profile_content"
                    app:met_minCharacters="1"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="@string/content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/light_gray2"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_reference"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="@string/reference"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:id="@+id/li_reference_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                        </LinearLayout>

                        <TextView
                            android:id="@+id/add_reference_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/li_reference_field"
                            android:text="@string/add"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginBottom="3dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="@string/convention_day"
                        android:textSize="12sp"
                        android:textColor="@color/profile_title"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        />

                    <TextView
                        android:id="@+id/select_day_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/li_reference_field"
                        android:text="@string/select"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginBottom="3dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <!-- Select Layout Frame -->
    <RelativeLayout
        android:id="@+id/rl_select_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/background_color"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/please_select_layout"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            />

        <ga.pageconnected.pageconnected.util.PagerContainer
            android:id="@+id/view_pager_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_layout_title"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            >

            <ga.pageconnected.pageconnected.util.CustomViewPager
                android:id="@+id/view_pager"
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                >

            </ga.pageconnected.pageconnected.util.CustomViewPager>

        </ga.pageconnected.pageconnected.util.PagerContainer>

    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        android:layout_height="@dimen/custom_actionbar_size"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기사 작성"
                android:textColor="@color/white"
                android:textSize="@dimen/custom_actionbar_title_size"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



    </android.support.v7.widget.Toolbar>


</RelativeLayout>
